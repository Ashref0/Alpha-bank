<body class="login">
<div class="container sm:px-10">
    <div class="block xl:grid grid-cols-2 gap-4">
        <!-- BEGIN: Register Info -->
        <div class="hidden xl:flex flex-col min-h-screen">
            <a href="" class="-intro-x flex items-center pt-5">
                <img alt="ALPHA" class="w-6" src="SRC/logo.png">
                <span class="text-white text-lg ml-3"> NNN </span> 
            </a>
            <div class="my-auto">
                <img alt="Midone - HTML Admin Template" class="-intro-x w-1/2 -mt-16" src="back/dist/images/illustration.svg">
                <div class="-intro-x text-white font-medium text-4xl leading-tight mt-10">
                    A few more clicks to 
                    <br>
                    sign up to your account.
                </div>
                <div class="-intro-x mt-5 text-lg text-white text-opacity-70 dark:text-slate-400">Manage all your e-commerce accounts in one place</div>
            </div>
        </div>
        <!-- END: Register Info -->
        <!-- BEGIN: Register Form -->
        <div class="h-screen xl:h-auto flex py-5 xl:py-0 my-10 xl:my-0">
            <div class="my-auto mx-auto xl:ml-20 bg-white dark:bg-darkmode-600 xl:bg-transparent px-5 sm:px-8 py-8 xl:p-0 rounded-md shadow-md xl:shadow-none w-full sm:w-3/4 lg:w-2/4 xl:w-auto">
                <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center xl:text-left">
                    Sign Up
                </h2>
                <div class="intro-x mt-2 text-slate-400 dark:text-slate-400 xl:hidden text-center">A few more clicks to sign in to your account. Manage all your e-commerce accounts in one place</div>
                
                <!-- Symfony Registration Form -->
                 {{ form_start(registrationForm, {attr: {'novalidate': 'novalidate'}}) }}
              
                <div class="intro-x mt-8">
                    {{ form_widget(registrationForm.username, {'attr': {'class': 'intro-x login__input form-control py-3 px-4 block', 'placeholder': 'Username'}}) }}
                    {{ form_errors(registrationForm.username)}}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'intro-x login__input form-control py-3 px-4 block mt-4', 'placeholder': 'Email'}}) }}
                    {{ form_errors(registrationForm.email)}}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'intro-x login__input form-control py-3 px-4 block mt-4', 'placeholder': 'Password'}}) }}
                    {{ form_errors(registrationForm.plainPassword)}}
                    {{ form_widget(registrationForm.roles, {'attr': {'class': 'intro-x login__input form-control py-3 px-4 block mt-4', 'placeholder': 'Roles'}}) }}
                    {{ form_errors(registrationForm.roles)}}
                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input border mr-2'}}) }}
                    {{ form_widget(registrationForm.captcha, {'attr': {'class': 'intro-x login__input form-control py-3 px-4 block mt-4', 'placeholder': 'Roles'}}) }}
                    {{ form_errors(registrationForm.captcha)}}
                </div>
                <div class="intro-x mt-5 xl:mt-8 text-center xl:text-left">
                    <button type="submit" class="btn btn-primary py-3 px-4 w-full xl:w-32 xl:mr-3 align-top">Register</button>
                    <button class="btn btn-outline-secondary py-3 px-4 w-full xl:w-32 mt-3 xl:mt-0 align-top">Sign in</button>
                </div>
                {{ form_end(registrationForm) }}
                <!-- End of Symfony Registration Form -->
                
            </div>
        </div>
        <!-- END: Register Form -->
    </div>
</div>
